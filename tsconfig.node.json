{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "noEmit": true
  },
  "include": [
    "vite.config.ts",
    "vite.config.js",
    "scripts/**/*.ts",
    "scripts/**/*.js"
  ]
}